@{
  Layout = "_Layout";
}

@using SweetSavory.Models;
@model List<SweetSavory.Models.Treat>;

<h1>Treats</h1>


<h4>Treats stored here:</h4>

@if (Model.Any())
{
  @foreach (Treat treat in Model)
  {
    <h3>@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId })</h3>
  }
}
else
{
  <h3>No treats have been added yet!</h3>
}

<hr />
<p>@Html.ActionLink("Add new Treat", "Create")</p>
