@{
  Layout = "_Layout";
}

@model SweetSavory.Models.Treat

<h4>Add a new treat</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new {@class="textInputBG"})

  @Html.LabelFor(model => model.Description)
  @Html.TextBoxFor(model => model.Description, new {@class="textInputBG"})

  @Html.Label("Add flavor")
  @Html.DropDownList("FlavorId")

  <input type="submit" value="Add new treat" class="btn btn-default" />
}
<hr />
<p>@Html.ActionLink("Show all treats", "Index")</p>