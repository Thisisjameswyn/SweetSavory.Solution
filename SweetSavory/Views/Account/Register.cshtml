@{
  Layout = "_Layout";
}

@using SweetSavory.ViewModels

@model RegisterViewModel

<h2>Register a new user</h2>
<hr />
@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    @Html.LabelFor(user => user.Email)
    @Html.TextBoxFor(user=> user.Email, new { Class="textInputBG" })

    @Html.LabelFor(user=> user.Password)
    @Html.PasswordFor(user=> user.Password, new { Class="textInputBG" })

    @Html.LabelFor(user=> user.ConfirmPassword)
    @Html.PasswordFor(user=> user.ConfirmPassword, new { Class="textInputBG" })

    <input type="submit" value="Register" class="btn btn-default"/>
}